---
import Navbar from "../components/Navbar.astro";

const { title = "Obas" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-neutral-200">
        <Navbar />
        <slot />
    </body>
</html>

<style is:global>
    h1 {
        font-size: 2.625rem;
    }

    h2 {
        font-size: 2.125rem;
    }

    h3 {
        font-size: 1.75rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h5 {
        font-size: 1.125rem;
    }

    h6 {
        font-size: 0.875rem;
    }
</style>
