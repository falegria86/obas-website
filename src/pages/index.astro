---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import CardHome from "../components/ui/CardHome.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import CardTestimonio from "../components/ui/CardTestimonio.astro";
import Footer from "../components/ui/Footer.astro";
import HeroSlider from "../components/HeroSlider";
---

<MainLayout>
	<main class="bg-neutral-900 w-full max-h-screen h-full p-4 flex gap-16">
		<HeroSlider client:load />
	</main>

	<section class="pt-16 max-w-[96rem] mx-auto px-8 2xl:px-0">
		<SectionTitle titulo="Nuestros servicios" />

		<div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8 mb-16">
			<CardHome
				titulo="Cercanía"
				texto={`Nuestras habitaciones están estratégicamente
